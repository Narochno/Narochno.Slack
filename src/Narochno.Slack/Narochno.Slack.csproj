<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>A simple Slack client for posting messages with fields and attachments.</Description>
    <VersionPrefix>2.1.2</VersionPrefix>
    <Authors>alanedwardes;adamhathcock</Authors>
    <TargetFramework>netstandard1.3</TargetFramework>
    <AssemblyName>Narochno.Slack</AssemblyName>
    <PackageId>Narochno.Slack</PackageId>
    <PackageTags>client;csharp;slack;netcore</PackageTags>
    <PackageIconUrl>https://avatars.githubusercontent.com/u/24652538</PackageIconUrl>
    <PackageProjectUrl>https://github.com/Narochno/Narochno.Slack</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="1.1.0" />
    <PackageReference Include="Narochno.Primitives.Json" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
    <PackageReference Include="Polly" Version="5.0.3" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.3' ">
    <PackageReference Include="System.Net.Http" Version="4.3.0" />
  </ItemGroup>

</Project>
